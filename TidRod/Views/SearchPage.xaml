<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:local="clr-namespace:TidRod.ViewModels" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="TidRod.Views.SearchPage" 
    xmlns:vm="clr-namespace:TidRod.ViewModels" xmlns:map="clr-namespace:TidRod.Components.Map"
    Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:SearchViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <map:CustomMap x:Name="MainMap">
            <map:CustomMap.ItemTemplate>
                <DataTemplate>
                    <map:CustomPin
                        x:Name="MapPin"
                        Type="Place"
                        Position="{Binding Position}" 
                        Address="{Binding Address}" 
                        Label="{Binding Name}" />
                </DataTemplate>
            </map:CustomMap.ItemTemplate>
        </map:CustomMap>

    </StackLayout>
</ContentPage>